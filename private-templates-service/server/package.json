{
  "name": "private-templates-service",
  "version": "1.0.0",
  "description": "Collaboration tool simplifying the workflow of developing adaptive cards.",
  "main": "server.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "start": "node dist/server.js",
    "build": "",
    "deploy": "tsc",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec ts-node src/server.ts | bunyan",
    "client": "cd ../client && npm start",
    "link-client": "cd ../adaptivecards-templating-client/typescript && npm install && npm run build && npm link && cd ../../client && npm link adaptive-templating-service-typescript-node && npm install && cd src && npm link adaptive-templating-service-typescript-node"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "adaptivecards-templating-service": "file:../adaptivecards-templating-service",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.12",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "helmet": "^3.21.3",
    "passport": "^0.4.1",
    "passport-azure-ad": "^4.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/bunyan": "^1.8.6",
    "@types/express": "^4.17.2",
    "@types/passport": "^1.0.2",
    "@types/passport-azure-ad": "^4.0.3",
    "@types/cors": "^2.8.6",
    "@types/express-session": "^1.17.0",
    "@types/helmet": "0.0.45",
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.2",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.5"
  }
}
